function setEl(elAll, text, href) {
  for (var i = 0; i < elAll.length; i++) {
    var el = elAll[i];
    // make sure the element is a DOM element
    if ( el && el.tagName ) {
      if ('textContent' in el) {
        el.textContent = text;
      } else if ('innerText' in el) { // Special case for IE8
        el.innerText = text;
      }
      el.href = href;
    }
  }
}

